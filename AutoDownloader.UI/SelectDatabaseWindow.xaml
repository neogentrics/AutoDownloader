<Window x:Class="AutoDownloader.UI.SelectDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Metadata Source" Height="200" Width="450"
        FontFamily="Segoe UI" Background="#FF1E1E1E"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0099FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <Label Content="Select the database to search for metadata:" Foreground="White" FontSize="14" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="TmdbButton" Content="Search TMDB (Default: 30s)" Click="TmdbButton_Click" Width="200" Height="40" Style="{StaticResource ActionButtonStyle}"/>
                <Button x:Name="TvdbButton" Content="Search TVDB (Anime/Plex)" Click="TvdbButton_Click" Width="200" Height="40" Style="{StaticResource ActionButtonStyle}" Background="#FF6C757D"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>