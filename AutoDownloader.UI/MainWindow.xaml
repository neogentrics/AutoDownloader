<Window x:Class="AutoDownloader.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoDownloader.UI"
        mc:Ignorable="d"
        Title="AutoDownloader v1.6" Height="800" Width="1280"
        FontFamily="Segoe UI"
        Background="#FF1E1E1E">

    <!-- This section defines our modern styles -->
    <Window.Resources>

        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>

            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="MenuItem.IsSubmenuOpen" Value="True">
                    <Setter Property="Background" Value="#FF3A3A3A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern, rounded text box -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Main "Go" Button -->
        <Style x:Key="GoButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="5" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0099FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FF555555"/>
                                <Setter Property="Foreground" Value="#FF999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- *** NEW! *** Stop Button Style (Burgundy Red) -->
        <Style x:Key="StopButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#C0392B"/>
            <!-- Nice Burgundy -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="5" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A93226"/>
                                <!-- Darker Red -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary "Browse" Button -->
        <Style x:Key="BrowseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="5" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF666666"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FF555555"/>
                                <Setter Property="Foreground" Value="#FF999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">

        <Menu DockPanel.Dock="Top" Background="#FF2D2D2D" Foreground="White" Padding="5">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Preferences..." Click="Preferences_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Log" IsChecked="True" IsCheckable="True" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom" Background="#FF007ACC" Foreground="White">
            <TextBlock x:Name="StatusTextBlock" Margin="5,2" Text="Ready."/>
        </StatusBar>

        <!-- Input Panel at the top -->
        <Border DockPanel.Dock="Top" Background="#FF2D2D2D" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" x:Name="UrlLabel" Content="Search Term or URL:" Foreground="White" Margin="0,0,0,5"/>

                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="0,0,10,10">

                    <TextBox x:Name="UrlTextBox" 
                             FontSize="14" 
                             KeyDown="UrlTextBox_KeyDown"
                             Height="30"
                             Visibility="Visible" />

                    <TextBox x:Name="MultiUrlTextBox" 
                             FontSize="14" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="100"
                             Visibility="Collapsed" 
                             Text="Enter one URL or search term per line." />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">

                    <Button x:Name="MultiLinkToggle"
                            Content="Toggle Multi-Link"
                            Style="{StaticResource BrowseButtonStyle}"
                            Click="MultiLinkToggle_Click"
                            Margin="0,0,0,10"
                            Height="30" />

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="StartDownloadButton" 
                                Content="Download" 
                                Style="{StaticResource GoButtonStyle}"
                                Click="StartDownloadButton_Click"
                                Visibility="Visible" Width="108" Height="30"/>

                        <Button x:Name="StopDownloadButton" 
                                Content="Stop Download" 
                                Style="{StaticResource StopButtonStyle}"
                                Click="StopDownloadButton_Click"
                                Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>

                <!-- Row 2: Output Folder (NOW VISIBLE) -->
                <Label Grid.Row="2" Grid.Column="0" Content="Output Folder:" Foreground="White" Margin="0,5,0,5"/>

                <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             x:Name="OutputFolderTextBox" 
                             FontSize="14" 
                             Margin="0,0,120,0" 
                             IsReadOnly="True" />

                    <Button 
                            x:Name="BrowseButton" 
                            Content="Browse..." 
                            Style="{StaticResource BrowseButtonStyle}"
                            Click="BrowseButton_Click" Margin="1126,0,0,0" />
                </Grid>

            </Grid>
        </Border>

        <!-- Log Output (fills the rest of the space) -->
        <Border Background="#FF2D2D2D" CornerRadius="5" Padding="5">
            <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                <!-- Use a RichTextBox for colored text -->
                <RichTextBox x:Name="OutputLogTextBox" 
                             Background="Black" 
                             Foreground="#FFCCCCCC" 
                             FontFamily="Consolas" 
                             FontSize="12"
                             BorderThickness="0"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Disabled">
                    <!-- Changed to Disabled to prevent double scrollbar -->
                    <FlowDocument>
                        <Paragraph x:Name="OutputLogParagraph">
                            <Run Text="Welcome to AutoDownloader v1.6!"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>

